      <script>
          async function initMap() {
              const myLatLng = { lat: -25.363, lng: 131.044 };
              const map = await new google.maps.Map(document.getElementById("map"), {
                      zoom: 1,
                      center: myLatLng,
                  });
          
                  new google.maps.Marker({
                      position: myLatLng,
                                  map,
                      title: "Hello World!",
                  });
                  }
          initMap();
      </script> 
