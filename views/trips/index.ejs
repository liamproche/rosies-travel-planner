<!DOCTYPE html>
<html>
    <head>
        <%-include ('../partials/head.ejs')%>
    </head>
    <body>
        <nav>
            <%-include ('../partials/nav.ejs')%>
        </nav>
        <h1> TRENDING trips</h1>
        <% if(trips.length === 0) {%>
            <h2>There are no trips in the database!</h2>
        <% } else { %> 
        <ul class="trips">
            <% trips.forEach((trip)=>{ %>
                    <li><a href="/trips/<%=trip._id%>"><%=trip.destinationCity%>, <%=trip.destinationCountry%></a></li>
            <% }) %>
        </ul>
        <% } %>
        <%if(!isLoggedIn){%>
            <a href="/users"><button href="/users" class="login-button">Login</button></a>
            <a href="/users/new"><button href=class="create-user-button">Create a new user</button></a>
        <%}%>
        <script src="" async defer></script>
    </body>
</html>